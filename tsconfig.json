{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "mapRoot": "./src/",
    "baseUrl": "./src/",
    "types": ["node"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "paths": {
      "auth": ["app/auth"],      
      "core": ["app/core"],
      "error": ["app/error"],
      "shared": ["app/shared"],
      "shop": ["app/shop"]      
    }
  }
}

